@model IEnumerable<OneNightWerewolf.Models.Message>

<div id="msg">
    @foreach (var item in Model)
    {
        <div class="row @item.GetMessageTypeForClass()">
            <div class="col-sm-9">
                <strong>@Html.DisplayFor(modelItem => item.PlayerUserName)</strong> > @Html.DisplayFor(modelItem => item.Content)
            </div>
            <div class="col-sm-3">
                <span class="text-info">@Html.DisplayFor(modelItem => item.CreatedAt)</span>
            </div>

        </div>
    }
</div>

@if (Model.Count() > 0)
{
    @Html.Hidden("hMaxMessageId", Model.Max(m => m.MessageId))
}
else
{
    @Html.Hidden("hMaxMessageId", -1)
}