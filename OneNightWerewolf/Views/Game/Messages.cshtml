@model IEnumerable<OneNightWerewolf.Models.Message>

<div id="msg">
    @foreach (var item in Model) {
    <div class="content">
        <div class="header">
            <img class="icon" src="@Url.Content(item.IconUri)" />
            <strong class="name">@Html.DisplayFor(modelItem => item.PlayerName)</strong>
            @if (item.PlayerUserName != null)
            {
                <span class="username">@@@Html.DisplayFor(modelItem => item.PlayerUserName)</span>
            }
            <span class="time">@Html.DisplayFor(modelItem => item.CreatedAt)</span>
        </div>
        <p class="@item.GetMessageTypeForClass()">
            @Html.DisplayFor(modelItem => item.Content)
        </p>
    </div>
    }
</div>

@if (Model.Count() > 0)
{
    @Html.Hidden("hMaxMessageId", Model.Max(m => m.MessageId))
}
else
{
    @Html.Hidden("hMaxMessageId", -1)
}