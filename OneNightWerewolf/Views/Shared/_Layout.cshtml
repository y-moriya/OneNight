<!DOCTYPE html>
<html lang="ja">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - ワンナイト人狼</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<script src="~/signalr/hubs"></script>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="http://typesquare.com/accessor/script/typesquare.js?d-9eocVOVp8%3D" charset="utf-8"></script>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-43279714-1', 'cloudapp.net');
        ga('send', 'pageview');
    </script>
</head>
<body>
    <header>
        <div class="boxContainer">
            <hgroup class="float-left">
                <h1 class="logo">@Html.ActionLink("ワンナイト 人狼チャット", "Index", "Home")</h1>
            </hgroup>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
        <nav>
            <ul id="menu">
                <li>@Html.ActionLink("ホーム", "Index", "Home")</li>
                <li>@Html.ActionLink("バージョン情報", "About", "Home")</li>
                <li>@Html.ActionLink("連絡先", "Contact", "Home")</li>
            </ul>
        </nav>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
        <section class="content-wrapper clear-fix">
            <script async src="http://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <!-- ワンナイト人狼 -->
            <ins class="adsbygoogle"
                 style="display:inline-block;width:728px;height:90px"
                 data-ad-client="ca-pub-5371184052707356"
                 data-ad-slot="6436459625"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - ワンナイト人狼チャット Ver.β2</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.signalR-2.0.0-beta2.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
